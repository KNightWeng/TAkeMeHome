<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_dark">

    <com.knightweng.android.takemehome.presentation.view.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:pstsTabBackground="@null"
        app:pstsIndicatorColor="@color/accent"
        app:pstsShouldExpand="true"
        app:pstsDividerColor="@null"
        app:pstsIndicatorHeight="4dp"
        app:pstsUnderlineColor="@color/accent"
        app:pstsTextAllCaps="true" />

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tabs"
        android:id="@+id/vp_search_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>